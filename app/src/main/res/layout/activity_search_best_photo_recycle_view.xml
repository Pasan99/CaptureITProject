<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/best_photographers_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="@drawable/search_element_back"
    android:elevation="15dp"
    tools:context=".search_best_photo_recycleView">

    <ImageView
        android:id="@+id/profile_image_best_photographers"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile_image"
        android:transitionName="userImage"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_best_photographers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:text="Pasan Manohara"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_best_photographers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profile_image_best_photographers"
        app:layout_constraintTop_toTopOf="@+id/profile_image_best_photographers"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rating_best_photographer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="5.0 rat"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_best_photographers"
        app:layout_constraintEnd_toEndOf="@+id/user_name_best_photographers"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_name_best_photographers"
        app:layout_constraintTop_toBottomOf="@+id/user_name_best_photographers"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>