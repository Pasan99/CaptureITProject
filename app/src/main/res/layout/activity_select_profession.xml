<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectProfession">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="What you Want to be ?"
        android:textColor="#0086f7"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/photographerButton_setup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@drawable/profile_setup_button"
        android:text="Photographer"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:text="Photographers are sell their works. Cover customersâ€™ event. Need to have talent in Photography or Videography."
        app:layout_constraintEnd_toEndOf="@+id/photographerButton_setup"
        app:layout_constraintStart_toStartOf="@+id/photographerButton_setup"
        app:layout_constraintTop_toBottomOf="@+id/photographerButton_setup" />

    <Button
        android:id="@+id/customerButton_setup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/profile_setup_button"
        android:text="Customer"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/photographerButton_setup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/photographerButton_setup"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Customer is the buyer. Can book photographers for your  event.. Find nearby photographers around your area "
        app:layout_constraintEnd_toEndOf="@+id/customerButton_setup"
        app:layout_constraintStart_toStartOf="@+id/customerButton_setup"
        app:layout_constraintTop_toBottomOf="@+id/customerButton_setup" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="OR"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />
</android.support.constraint.ConstraintLayout>